@model IEnumerable<labelPrint.Models.siixsem_lblZPL_t>

<div class="window" style="margin-top:70px;width:90%;">
    <div class="window-title">CODIGOS ZPL / ZPL CODES</div>
    <div class="window-content">
        <div class="well" style="font-size:14px;font-family:pt_sansr;background-color:white;">
            <table class="table" id="tblZPL">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>ZPL 1</th>
                        <th>ZPL 2</th>
                        <th>ZPL Preview</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_str_zpl_one)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_str_zpl_two)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_str_zpl_preview)
                        </td>
                        <td>
                            <center>
                                <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnNEditProy" onclick="getDlgEditCZPL(@item.se_id_zpl);">
                                    <span class='glyphicon glyphicon-pencil' style='margin:0;'></span>
                                </a>
                                <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDetailsProy" onclick="getDlgDetailsCZPL(@item.se_id_zpl);">
                                    <span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>
                                </a>
                                <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDeleteProy" onclick="getDlgDeleteCZPL(@item.se_id_zpl);">
                                    <span class='glyphicon glyphicon-trash' style='margin:0;'></span>
                                </a>
                            </center>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#dlgGeneral" id="btnNewZPL" style="margin-left:30px;float:right;">
            <span class='glyphicon glyphicon-file' style='margin-right:5px;'></span>Nuevo
        </button>
        <div style="clear:both;"></div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //loadLoginDlg();
            $('#tblZPL').DataTable({
                "paging": true,
                //"order": [[0, "asc"]],
                "recordsFiltered": 10,
                "lengthChange": false,
                "searching": true,
                "pageLength": 5,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                'language': { 'url': getVirtDir() + '/Scripts/Spanish.json' }
            });
            $("#btnNewZPL").click(function () {
                getDlgCreateCZPL();
            });
            $(".edit").html("<span class='glyphicon glyphicon-pencil' style='margin:0;'></span>");
            $(".delete").html("<span class='glyphicon glyphicon-trash' style='margin:0;'></span>");
            $(".det").html("<span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>");
        });
    </script>
}