@model labelPrint.Models.siixsem_lblZPL_t

@using (Html.BeginForm("Create", "se_zpl", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formCreateZPL" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.se_name, "Descripción", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.se_name, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.se_str_zpl_one, "ZPL 1 etiqueta", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.se_str_zpl_one, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_str_zpl_one, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.se_str_zpl_two, "ZPL 2 etiquetas", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.se_str_zpl_two, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_str_zpl_two, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.se_str_zpl_two, "ZPL preview", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.se_str_zpl_preview, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_str_zpl_preview, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="float:right;">
        <div class="col-md-offset-2 col-md-10">
            @*<input type="submit" value="Create" class="btn btn-default" />*@
            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><span class='glyphicon glyphicon-remove-circle' style='margin-right:5px;'></span>Cancelar</button>
            <button type="submit" class="btn btn-sm btn-success" id="btnSaveZPL">
                <span class='glyphicon glyphicon-floppy-disk' style='margin-right:5px;'></span>Guardar
            </button>
        </div>
    </div>
    <div style="clear:both;"></div>
</div>
}

<script type="text/javascript">

    $(document).ready(function () {
        $("#formCreateZPL").validationEngine('attach');
        $("#btnSaveZPL").click(function () {
            if (!jQuery("#formCreateZPL").validationEngine('validate')) {
                return false;
            }
            //getViewPrintLbl($("#txtLblCodeL").val(), $("#txtLblCodeR").val(), $("#selCant").val());
        });
    });
</script>