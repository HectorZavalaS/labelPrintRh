@model IEnumerable<labelPrint.Models.siixsem_models_t>

<div class="window" style="margin-top:70px;width:65%;">
    <div class="window-title">Modelos / Models</div>
    <div class="window-content">
        <div class="well" style="font-size:14px;font-family:pt_sansr;background-color:white;">
            <table class="table" id="tblModels">
                <thead>
                    <tr>
                        <th>DESCRIPCION</th>
                        <th>PROYECTO</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.se_description)</td>
                            <td>@Html.DisplayFor(modelItem => item.siixsem_families_t.se_description)</td>
                            <td>
                                <center>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnNEditModel" onclick="getDlgEditModel(@item.se_id_model);">
                                        <span class='glyphicon glyphicon-pencil' style='margin:0;'></span>
                                    </a>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDetailsModel" onclick="getDlgDetailsModel(@item.se_id_model);">
                                        <span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>
                                    </a>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDeleteModel" onclick="getDlgDeleteModel(@item.se_id_model);">
                                        <span class='glyphicon glyphicon-trash' style='margin:0;'></span>
                                    </a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#dlgGeneral" id="btnNewModel" style="margin-left:30px;float:right;">
            <span class='glyphicon glyphicon-file' style='margin-right:5px;'></span>Nuevo
        </button>
        <div style="clear:both;"></div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //loadLoginDlg();
            $('#tblModels').DataTable({
                "paging": true,
                //"order": [[0, "asc"]],
                "recordsFiltered": 10,
                "lengthChange": false,
                "searching": true,
                "pageLength": 5,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                'language': { 'url': getVirtDir() + '/Scripts/Spanish.json' }
            });
            $("#btnNewModel").click(function () {
                getDlgCreateModel();
            });

            $(".delete").html("<span class='glyphicon glyphicon-trash' style='margin:0;'></span>");
            $(".det").html("<span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>");
        });
    </script>
}
