@model labelPrint.Models.siixsem_models_t

@using (Html.BeginForm(Html.BeginForm("Create", "se_models", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formCreateMod" })))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.se_description, "Descripción", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.se_description, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.se_id_family, "Proyecto", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownList("se_id_family", null, htmlAttributes: new { @class = "form-control validate[required]" })
            @Html.ValidationMessageFor(model => model.se_id_family, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.se_is_special, "¿Especial?", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.se_is_special, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_is_special, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div style="float:right; width:180px;">
        <div style="float:left;">

            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">
                <span class='glyphicon glyphicon-remove-circle' style='margin-right:5px;'></span>Cancelar
            </button>
        </div>
        <div style="float:right;">
            <button type="submit" class="btn btn-sm btn-success" id="btnSaveModel">
                <span class='glyphicon glyphicon-floppy-disk' style='margin-right:5px;'></span>Guardar
            </button>
        </div>
    </div>
    <div style="clear:both;"></div>
</div>
}

<script type="text/javascript">

        $(document).ready(function () {
            $("#formCreateMod").validationEngine('attach');
            $("#btnSaveModel").click(function () {
                if (!jQuery("#formCreateMod").validationEngine('validate')) {
                    return false;
                }
