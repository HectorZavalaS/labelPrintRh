@model labelPrint.Models.siixsem_families_t

@using (Html.BeginForm("Edit", "se_projects", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formEditProy" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.se_id_family)

    <div class="form-group">
        @Html.LabelFor(model => model.se_description,"Descripción", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.se_description, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.se_car_model,"Modelo", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.se_car_model, new { htmlAttributes = new { @class = "form-control validate[required]" } })
            @Html.ValidationMessageFor(model => model.se_car_model, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="float:right;">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><span class='glyphicon glyphicon-remove-circle' style='margin-right:5px;'></span>Cancelar</button>
            <button type="submit" class="btn btn-sm btn-success" id="btnSaveProy">
                <span class='glyphicon glyphicon-floppy-disk' style='margin-right:5px;'></span>Guardar
            </button>
        </div>
    </div>
    <div style="clear:both;"></div>
</div>
}
<script type="text/javascript">
        $(document).ready(function () {
            $("#formEditProy").validationEngine('attach');
            $("#btnSaveProy").click(function () {
                if (!jQuery("#formEditProy").validationEngine('validate')) {
                    return false;
                }
                //getViewPrintLbl($("#txtLblCodeL").val(), $("#txtLblCodeR").val(), $("#selCant").val());
            });
        });
</script>
