@model labelPrint.Models.siixsem_colorsb_td

@{
    ViewBag.Title = "Create";
}

<div class="window-title" style="margin-top:70px; width:40%;margin-left:auto;margin-right:auto;">Add Color</div>
<div class="window-content" style="width:40%;background-image:none;background-color:transparent;margin-left:auto;margin-right:auto;padding:0px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="well" style="background-color:gray;">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
