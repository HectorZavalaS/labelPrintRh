                    @Html.LabelFor(model => model.se_id_colorb, "Color Name", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("se_id_colorb", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.se_id_colorb, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.se_id_lblTag, "Label tag", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("se_id_lblTag", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.se_id_lblTag, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.se_id_model, "Modelo", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("se_id_model", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.se_id_model, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div>
            @*<div class="form-group" style="float:right;margin-right:20px;">
                    <input type="button" value="Add Side" class="btn btn-success" id="btnSaveFlux" />
                    <input type="button" value="Next" class="btn btn-success" id="btnNext" />
                </div>*@
