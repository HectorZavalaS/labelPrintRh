@model labelPrint.Models.siixsem_lblTemplates_t

@using (Html.BeginForm("Create", "se_labels", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formCreateLabel" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.se_id_zpl, "Etiqueta ZPL", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("se_id_zpl", null, htmlAttributes: new { @class = "form-control validate[required]" })
                @Html.ValidationMessageFor(model => model.se_id_zpl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.se_id_dm, "Datamatrix", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("se_id_dm", null, htmlAttributes: new { @class = "form-control validate[required]" })
                @Html.ValidationMessageFor(model => model.se_id_dm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="float:right;">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><span class='glyphicon glyphicon-remove-circle' style='margin-right:5px;'></span>Cancelar</button>
                @*<input type="submit" value="Guardar" class="btn btn-sm btn-success" />*@
                <button type="submit" class="btn btn-sm btn-success" id="btnSaveLabel">
                    <span class='glyphicon glyphicon-floppy-disk' style='margin-right:5px;'></span>Guardar
                </button>
            </div>
        </div>
        <div style="clear:both;"></div>
    </div>
}

    <script type="text/javascript">

        $(document).ready(function () {
            $("#formCreateLabel").validationEngine('attach');
            $("#btnSaveLabel").click(function () {
                if (!jQuery("#formCreateLabel").validationEngine('validate')) {
                    return false;
                }
                //getViewPrintLbl($("#txtLblCodeL").val(), $("#txtLblCodeR").val(), $("#selCant").val());
            });
        });
    </script>
