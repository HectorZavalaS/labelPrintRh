@model IEnumerable<labelPrint.Models.siixsem_lblTemplates_t>

<div class="window" style="margin-top:70px;width:90%;">
    <div class="window-title">ETIQUETAS / LABELS</div>
    <div class="window-content">
        <div class="well" style="font-size:14px;font-family:pt_sansr;background-color:white;">
            <table class="table" id="tblLabels">
                <thead>
                    <tr>
                        <th>
                            DENSIDAD
                        </th>
                        <th>
                            ETIQUETA
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.siixsem_datamatrix_t.siixsem_densities_t.se_density)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.siixsem_lblZPL_t.se_name)
                            </td>
                            <td>
                                <center>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnNEditProy" onclick="getDlgEditLabel(@item.se_id_label);">
                                        <span class='glyphicon glyphicon-pencil' style='margin:0;'></span>
                                    </a>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDetailsProy" onclick="getDlgDetailsLabel(@item.se_id_label);">
                                        <span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>
                                    </a>
                                    <a href="#" data-toggle="modal" data-target="#dlgGeneral" class="btn btn-xs btn-primary btnDeleteProy" onclick="getDlgDeleteLabel(@item.se_id_label);">
                                        <span class='glyphicon glyphicon-trash' style='margin:0;'></span>
                                    </a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#dlgGeneral" id="btnNewLabel" style="margin-left:30px;float:right;">
            <span class='glyphicon glyphicon-file' style='margin-right:5px;'></span>Nuevo
        </button>
        <div style="clear:both;"></div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //loadLoginDlg();
            $('#tblLabels').DataTable({
                "paging": true,
                //"order": [[0, "asc"]],
                "recordsFiltered": 10,
                "lengthChange": false,
                "searching": true,
                "pageLength": 5,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                'language': { 'url': getVirtDir() + '/Scripts/Spanish.json' }
            });
            $("#btnNewLabel").click(function () {
                getDlgCreateLabel();
            });
            $(".edit").html("<span class='glyphicon glyphicon-pencil' style='margin:0;'></span>");
            $(".delete").html("<span class='glyphicon glyphicon-trash' style='margin:0;'></span>");
            $(".det").html("<span class='glyphicon glyphicon-list-alt' style='margin:0;'></span>");
        });
    </script>
}