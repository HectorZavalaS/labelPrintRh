@model labelPrint.Models.siixsem_models_t

@{
    ViewBag.Title = "Agregar modelo";
}

@*<div class="window" style="margin-top:70px;width:500px;">*@
    <div class="window-title" style="margin-top:70px;width:500px;margin-left:auto;margin-right:auto;">Add Model</div>
    <div class="window-content" style="width:500px;background-image:none;background-color:transparent;margin-left:auto;margin-right:auto;padding:0px;">
        <div class="well" style="background-color:gray;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="window-content" style="background-image:none;">
                        <div class="form-group">
                            <label for="selModel" class="control-label col-md-4" style="margin-top:5px;">Descripción</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.se_description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.se_description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="window-content" style="background-image:none; margin-top:10px;">
                        @*<fieldset style="margin-left:auto;margin-right:auto;">*@
                            <div class="form-group">
                                <label for="selModel" class="control-label col-md-4" style="margin-top:5px;">Proyecto</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("se_id_family", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.se_id_family, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div style="padding:20px;width:300px; margin-left:auto;margin-right:auto;">
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isSpecial">
                                    <label class="form-check-label" for="isSpecial">Es especial?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isActivate">
                                    <label class="form-check-label" for="isActivate">Activado</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isSerialCont">
                                    <label class="form-check-label" for="isSerialCont">Es de serial continuo?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isTwoL">
                                    <label class="form-check-label" for="isTwoL">Tiene dos led's?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isDFC">
                                    <label class="form-check-label" for="isDFC">Es DFC o IFC?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isLM">
                                    <label class="form-check-label" for="isLM">Es de marcado laser?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="hasPanel">
                                    <label class="form-check-label" for="hasPanel">Tiene etiqueta de panel?</label>
                                </div>
                                <div class="form-group" style="margin-left:auto;margin-right:auto;">
                                    <input type="checkbox" id="isLDM">
                                    <label class="form-check-label" for="isLDM">Es LDM?</label>
                                </div>
                                <div class="form-group" style="width:200px;">
                                    <label for="selModel" style="float:left;margin-top:5px;">Num PCB's x Panel</label>
                                    <div style="float:right;">
                                        @Html.EditorFor(model => model.se_num_pcb, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.se_num_pcb, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        @*</fieldset>*@
                    </div>

                </div>
            }
        </div>
        <div>
            <div class="form-group" style="float:right;margin-right:20px;">
                @Html.ActionLink("Cancelar", "Index")
                <input type="button" value="Create" class="btn btn-success" id="btnSaveModel" style="margin-left:10px;" />
            </div>
            <div style="clear:both;"></div>
        </div>
    </div>
@*</div>*@

<script type="text/javascript">
    $(document).ready(function () {
        $('#se_num_pcb').css('width', '50px');
        createSelect("#se_id_family");

        $("#btnSaveModel").click(function () {
            insertModel();
            return;
        });

    });
</script>
